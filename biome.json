{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "useEditorconfig": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "auto",
    "bracketSpacing": true
  },
  "linter": {
    "rules": {
      "all": true,
      "style": {
        "noDefaultExport": "off",
        "noImplicitBoolean": "off",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false
          }
        },
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false
          }
        }
      },
      "correctness": {
        "noUndeclaredDependencies": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded"
    }
  },
  "overrides": [
    {
      "include": ["tsconfig.*.json", "tsconfig.json"],
      "json": {
        "parser": {
          "allowComments": true
        }
      }
    },
    {
      "include": ["apps/web/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noReactSpecificProps": "off"
          }
        }
      }
    },
    {
      "include": ["apps/backend/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsoleLog": "off",
            "noConsole": "off"
          },
          "correctness": {
            "noNodejsModules": "off"
          }
        }
      }
    }
  ]
}
